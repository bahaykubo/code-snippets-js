{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "rules": {
    "indent": [
      "error", 2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error", "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": "error",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-tabs": "error",
    "no-useless-concat": "error",
    "prefer-template": "error",
    "template-curly-spacing": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "padding-line-between-statements": [
      "error",
      { "blankLine": "never", "prev": "import", "next": "import" }
    ]
  }
}
